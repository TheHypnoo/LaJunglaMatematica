<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nivel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animacionLogo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintBottom_toTopOf="@+id/GL_BotonPrimario"
            app:layout_constraintEnd_toStartOf="@+id/GL_ArribaDerecha"
            app:layout_constraintStart_toStartOf="@+id/GL_ArribaIzquierda"
            app:layout_constraintTop_toTopOf="@+id/GL_Arriba"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/nivel"
            tools:ignore="MissingConstraints" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Responde a esta pregunta " />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" ¡Hola amigo! Necesito tu ayuda. Mi mama me ha pedido que vaya a   comprar fruta al mercado y me ha pedido que compre 4 manzanas  y 2 peras. ¿Cuantas piezas de fruta  tengo que comprar en total?" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/Correcto"
                        android:layout_width="190dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_toEndOf="@+id/Incorrecto"
                        android:layout_toRightOf="@+id/Incorrecto"
                        android:gravity="left"
                        app:layout_constraintBottom_toTopOf="@+id/GL_BotonPrimario"
                        app:layout_constraintEnd_toStartOf="@+id/GL_ArribaDerecha"
                        app:layout_constraintStart_toStartOf="@+id/GL_ArribaIzquierda"
                        app:layout_constraintTop_toTopOf="@+id/GL_Arriba"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/correcto"
                        tools:ignore="MissingConstraints" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/Incorrecto"
                        android:layout_width="190dp"
                        android:layout_height="90dp"
                        android:layout_weight="0"
                        android:gravity="right"
                        app:layout_constraintBottom_toTopOf="@+id/GL_BotonPrimario"
                        app:layout_constraintEnd_toStartOf="@+id/GL_ArribaDerecha"
                        app:layout_constraintStart_toStartOf="@+id/GL_ArribaIzquierda"
                        app:layout_constraintTop_toTopOf="@+id/GL_Arriba"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/incorrecto"
                        tools:ignore="MissingConstraints" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="100dp" />

                        <EditText
                            android:id="@+id/editTextNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ems="10"
                            android:inputType="number" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="15dp" />

                        <Button
                            android:id="@+id/button"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/bordes_redondos"
                            android:text="Corregir" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>